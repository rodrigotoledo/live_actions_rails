<div class="mx-auto md:w-2/3 w-full">
  <div class="space-y-6">
    <h1 class="font-bold text-4xl text-indigo-300">Editing Task</h1>

    <div class="bg-gray-800/70 rounded-xl border border-gray-700 p-6 shadow-lg">
      <%= render "form", task: @task %>
    </div>

    <div class="flex flex-wrap gap-3">
      <%= link_to "Show this task", @task,
          class: "rounded-lg py-3 px-5 bg-gray-700 hover:bg-gray-600 text-gray-200 font-medium transition-colors" %>

      <%= link_to "Back to tasks", tasks_path,
          class: "rounded-lg py-3 px-5 bg-gray-700 hover:bg-gray-600 text-gray-200 font-medium transition-colors" %>

      <%= button_to "Delete task", @task, method: :delete,
          class: "rounded-lg py-3 px-5 bg-red-600/80 hover:bg-red-500/80 text-white font-medium transition-colors",
          form: {"data-turbo-frame" => "_top", data: { turbo_confirm: "Are you sure?" } }  %>
    </div>
  </div>
</div>
