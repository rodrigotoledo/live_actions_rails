<%= form_with(model: task, class: "contents space-y-6") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-900/30 text-red-300 px-4 py-3 rounded-lg">
      <h2 class="font-medium"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul class="mt-2 list-disc list-inside space-y-1">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :title, class: "block text-gray-300 font-medium" %>
    <%= form.text_field :title,
        class: "w-full rounded-lg bg-gray-700 border-gray-600 text-white px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :description, class: "block text-gray-300 font-medium" %>
    <%= form.text_area :description,
      class: "w-full rounded-lg bg-gray-700 border-gray-600 text-white px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :scheduled_at, class: "block text-gray-300 font-medium" %>
    <%= form.datetime_field :scheduled_at,
        class: "w-full rounded-lg bg-gray-700 border-gray-600 text-white px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="flex items-center space-x-3 pt-2">
    <%= form.check_box :completed,
        class: "h-5 w-5 rounded bg-gray-700 border-gray-600 text-indigo-500 focus:ring-indigo-500" %>
    <%= form.label :completed, class: "text-gray-300 font-medium" %>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-4">
    <button type="submit" form="<%= dom_id(@task) %>" class="rounded-lg py-2 px-5 bg-indigo-600 hover:bg-indigo-500 text-white font-medium transition-colors flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
      </svg>
      Save
    </button>
  </div>
<% end %>
